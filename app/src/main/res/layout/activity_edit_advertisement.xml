<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostAd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/loginToolbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/button_gradient"
                tools:ignore="MissingConstraints">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/ic_keyboard_arrow_left"
                        android:tint="#ffffff" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>


            <EditText
                android:id="@+id/editPostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/text_background"
                android:drawableStart="@drawable/ic_text_fields_black_24dp"
                android:drawableLeft="@drawable/ic_text_fields_black_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Post Title"
                android:inputType="text"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ivProductImage"
                tools:ignore="UnknownId" />

            <EditText
                android:id="@+id/editPostDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/text_background"
                android:drawableStart="@drawable/ic_description_black_24dp"
                android:drawableLeft="@drawable/ic_description_black_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Post Description"
                android:inputType="textMultiLine"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/editPostTitle" />

            <TextView
                android:id="@+id/editPostCategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/text_background"
                android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
                android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:padding="10dp"
                android:text="Post Category"
                app:layout_constraintTop_toBottomOf="@+id/editPostDescription" />


            <EditText
                android:id="@+id/editProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:autofillHints=""
                android:background="@drawable/text_background"
                android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
                android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Product Price"
                android:inputType="number"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/editPostCategorySpinner"
                tools:ignore="UnknownId" />


            <ImageView
                android:id="@+id/editSelectImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="3dp"
                android:src="@drawable/upload_img"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/editProductPrice"
                tools:ignore="MissingConstraints,NotSibling" />


            <Button
                android:id="@+id/btnEditAd"
                android:layout_width="385dp"
                android:layout_height="48dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="340dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/btn_corner"
                android:text="Edit Advertisement"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Switch
                android:id="@+id/deactivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="163dp"
                android:layout_marginLeft="163dp"
                android:layout_marginTop="246dp"
                android:layout_marginEnd="115dp"
                android:layout_marginRight="115dp"
                android:layout_marginBottom="147dp"
                android:text="Deactivate Ad"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>