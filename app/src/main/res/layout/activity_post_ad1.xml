<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostAd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/button_gradient"
                android:id="@+id/loginToolbar"
                tools:ignore="MissingConstraints">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_left"
                        android:background="@null"
                        android:tint="#ffffff"
                        android:id="@+id/btnBack"
                        />




                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>




            <EditText
                android:id="@+id/inputPostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/text_background"
                android:hint="Post Title"
                android:drawableStart="@drawable/ic_text_fields_black_24dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:drawablePadding="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/ivProductImage"
                android:drawableLeft="@drawable/ic_text_fields_black_24dp"
                tools:ignore="UnknownId" />

            <EditText
                android:id="@+id/inputPostDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/text_background"
                android:hint="Post Description"
                android:inputType="textMultiLine"
                android:drawableStart="@drawable/ic_description_black_24dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:drawablePadding="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/inputPostTitle"
                android:drawableLeft="@drawable/ic_description_black_24dp" />

            <TextView
                android:id="@+id/PostCategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="Post Category"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/inputPostDescription"
                android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp" />



            <EditText
                android:id="@+id/inputProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/text_background"
                android:hint="Product Price"
                android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:drawablePadding="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@+id/PostCategorySpinner"
                android:autofillHints=""
                android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
                tools:ignore="UnknownId" />



            <ImageView
                android:id="@+id/SelectImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_row="0"
                app:layout_constraintTop_toBottomOf="@+id/inputProductPrice"
                android:layout_margin="3dp"
                android:textAllCaps="false"
                android:src="@drawable/upload_img"
                tools:ignore="MissingConstraints,NotSibling" />


            <Button
                android:id="@+id/btnAddProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_corner"
                android:text="Post Advertisement"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SelectImage" />






        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>